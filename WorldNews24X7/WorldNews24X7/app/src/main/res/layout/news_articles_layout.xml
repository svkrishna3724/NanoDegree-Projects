<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin_5dp"
    app:cardCornerRadius="@dimen/image_margin_10dp"
    app:cardElevation="@dimen/card_elevation_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/news_article_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_size_200dp"
            android:layout_margin="@dimen/image_margin_10dp"
            android:contentDescription="@string/news_article_image" />

        <TextView
            android:id="@+id/news_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/news_title_goes_here"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/news_title_text_size"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>